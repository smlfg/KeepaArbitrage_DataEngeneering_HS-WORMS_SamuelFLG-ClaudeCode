# ============================================================
# Keeper System - Environment Configuration
# ============================================================
# Copy this file to .env and fill in the required values:
#   cp .env.example .env
# ============================================================

# ---------------------- REQUIRED ----------------------

# Keepa API key (get one at https://keepa.com/#!api)
KEEPA_API_KEY=your-keepa-api-key

# ---------------------- OPTIONAL ----------------------
# Defaults shown. Override only if needed.

# --- Database ---
# For Docker: use service name "db"
# For local dev: use "localhost"
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/keeper

# --- Kafka ---
# Container-internal: kafka:29092 | Host access: localhost:9092
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC_PRICES=price-updates
KAFKA_TOPIC_DEALS=deal-updates
KAFKA_CONSUMER_GROUP=keeper-consumer-group

# --- Elasticsearch ---
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX_PRICES=keeper-prices
ELASTICSEARCH_INDEX_DEALS=keeper-deals

# --- Deal Scanner ---
# product_only = query individual ASINs from seed file (no /deals endpoint needed)
DEAL_SOURCE_MODE=product_only
DEAL_SEED_FILE=data/seed_asins_eu_qwertz.txt
DEAL_SCAN_INTERVAL_SECONDS=3600
DEAL_SCAN_BATCH_SIZE=10

# --- Notifications (all optional) ---

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord
DISCORD_WEBHOOK=

# --- App ---
DEBUG=true
LOG_LEVEL=INFO
